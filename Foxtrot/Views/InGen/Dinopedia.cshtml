@model IEnumerable<Foxtrot.Models.Dinopedia>

@{
    ViewBag.Title = "Dinopedia";
}


<div class="jurassic-dinopedia" id="dinopediaList">
    

    <span class="jurassic-dinopedia-head">Dinopedia</span>
       
        <span class="jurassic-small2-head">
            @Html.DisplayNameFor(model => model.Species)
        </span>
    <span class="jurassic-small2-head">
        @Html.DisplayNameFor(model => model.Characteristics_FK.Diet)
    </span>

        <span class="jurassic-small2-head">
            @Html.DisplayNameFor(model => model.Period)
        </span>
        <span class="jurassic-small2-head">
            @Html.DisplayNameFor(model => model.Shape)
        </span>
        

</div>


<div>
    @foreach (var item in Model)
    {
     
        <div class="dinopediaContainer col-md-2 dinopedia">
            <br />
            <span class="jurassic-small2-dino species">
                @Html.DisplayFor(modelItem => item.Species)
            </span>
            <span class="jurassic-small2-dino modelnameBorders">
                @Html.DisplayFor(modelItem => item.Characteristics_FK.Diet)
            </span>
            <span class="jurassic-small2-dino modelnameBorders">
                @Html.DisplayFor(modelItem => item.Period)
            </span>
            <span class="jurassic-small2-dino modelnameBorders">
                @Html.DisplayFor(modelItem => item.Shape)
            </span>
            <div class="dinopediaContainer2">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })  |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </div>
        <br />
        </div>


    }
</div>