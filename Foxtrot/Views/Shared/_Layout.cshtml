<!DOCTYPE html>
<html ng-app="myModule">
<head>
  
    <meta name="Author" content="Stefan Hellhager" />
    <meta name="Description" content="dinosaurs, games, foxes,  population simulation" />
    <meta name="Keywords" content="fox,odd,nations,population,radio" />
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    <script src="~/Scripts/AngularScripts/angular-animate.js"></script>
    <script src="~/Scripts/angulike.js"></script>
    @Scripts.Render("~/bundles/vally")
    @Scripts.Render("~/bundles/modernizr")





</head>
<body ng-cloak>
    <div class="navbar navbar-inverse navbar-fixed-top  jurassic-normal navbarBackground">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

         @Html.ActionLink("JurassicValley - Alpha", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navHead" })

            </div>


            <div class="navbar-collapse collapse" ng-controller="dinoController">
                <ul class="nav navbar-nav">
                    
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li >@Html.ActionLink("Dinopedia", "Dinopedia", "InGen")</li>
                    <li>@Html.ActionLink("Fox Population Simulator", "Index", "FoxSim")</li>
                    <li>@Html.ActionLink("About", "About", "About")</li>
                </ul>
            </div>
        </div>
    </div>
    

    <div class="container body-content">
        @RenderBody()
        
        <footer class="footer">
            @{Html.RenderPartial("Comments"); }


            <hr />
            <p>&copy; @DateTime.Now.Year -  Stefan Hellhager
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/AngularScripts/angular-route.min.js"></script>
    <script src="~/Scripts/JurassicVally/JurassicCore.js"></script>

    

    @RenderSection("scripts", required: false)
</body>
</html>
